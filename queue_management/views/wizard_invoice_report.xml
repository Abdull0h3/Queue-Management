<odoo>
    <record id="view_invoice_report_wizard_form" model="ir.ui.view">
        <field name="name">invoice.report.wizard.form</field>
        <field name="model">invoice.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Invoice Report">
                <group>
                    <field name="report_type"/>
                </group>
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <footer>
                    <button string="Generate" type="object" name="action_generate_report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_invoice_report_wizard" model="ir.actions.act_window">
        <field name="name">Invoice Report Wizard</field>
        <field name="res_model">invoice.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>
</odoo>
